#include <iostream>

using namespace std;

int main(){
	
	float nilai_tugas, nilai_uts, nilai_uas, nilai_akhir;
	char predikat;
	
	cout<<"Program Menghitung Nilai Akhir"<<endl;
	cout<<"______________________________"<<endl;
	
	cout<<"Nilai Tugas : ";
	cin>>nilai_tugas;
	
	cout<<"Nilai UTS : ";
	cin>>nilai_uts;
	
	cout<<"Nilai UAS : ";
	cin>>nilai_uas;
	
	nilai_akhir = ((nilai_tugas*0.3)+(nilai_uts*0.3)+(nilai_uas*0.4));
	
	if (nilai_akhir>=80){
		predikat='A';
	}else if (nilai_akhir>=70){
		predikat='B';
	}else if(nilai_akhir>=60){
		predikat='C';
	}else if (nilai_akhir>=50){
		predikat='D';
	}else {
		predikat='E';
	}
	
	
	cout<<endl;
	cout<<"Nilai Akhir : "<<nilai_akhir<<endl;
	cout<<"Predikat: "<<predikat<<endl;
	
	
}
